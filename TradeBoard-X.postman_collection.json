{
  "info": {
    "name": "TradeBoard X API",
    "description": "Complete API collection for TradeBoard X - AI Powered Trading Dashboard",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "accessToken", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"testtrader\",\"email\":\"test@example.com\",\"password\":\"Test123!\",\"tradingStyle\":\"day_trader\"}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["const json = pm.response.json(); if(json.data && json.data.accessToken) { pm.collectionVariables.set('accessToken', json.data.accessToken); }"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"demo@tradeboard.x\",\"password\":\"Demo123!\"}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/refresh",
            "header": []
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/logout",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        }
      ]
    },
    {
      "name": "Trades",
      "item": [
        {
          "name": "Get All Trades",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/trades?page=1&limit=10&sortBy=tradeDate&sortOrder=desc",
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "sortBy", "value": "tradeDate" },
                { "key": "sortOrder", "value": "desc" },
                { "key": "status", "value": "", "disabled": true },
                { "key": "search", "value": "", "disabled": true }
              ]
            },
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        },
        {
          "name": "Create Trade",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/trades",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"assetName\":\"BTC\",\"assetCategory\":\"crypto\",\"positionType\":\"long\",\"entryPrice\":67000,\"quantity\":0.1,\"leverage\":1,\"status\":\"open\",\"strategy\":\"breakout\",\"tradeDate\":\"2024-01-15\",\"sentiment\":\"bullish\",\"fees\":5,\"tradeNotes\":\"Strong breakout above resistance\"}"
            }
          }
        },
        {
          "name": "Close Trade",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/trades/:id",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"status\":\"closed\",\"exitPrice\":70000}"
            }
          }
        },
        {
          "name": "Delete Trade",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/trades/:id",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Dashboard Analytics (30d)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/analytics/dashboard?period=30d",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        },
        {
          "name": "Dashboard Analytics (All Time)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/analytics/dashboard?period=all",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users/profile",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/users/profile",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"bio\":\"Professional crypto day trader\",\"tradingStyle\":\"day_trader\"}"
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/users/change-password",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"currentPassword\":\"Demo123!\",\"newPassword\":\"NewPassword123!\"}"
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "http://localhost:5000/health"
      }
    }
  ]
}
